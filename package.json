{
  "name": "vcode-project-tree",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "publisher": "nzhuravlev",
  "version": "0.3.3",
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhuravlev-nik/vscode-project-organizer"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:projectTreeView",
    "onCommand:projectTree.openConfig",
    "onCommand:projectTree.refresh",
    "onCommand:projectTree.openProject",
    "onCommand:projectTree.addProject",
    "onCommand:projectTree.editProject",
    "onCommand:projectTree.removeProject",
    "onCommand:projectTree.addCategory",
    "onCommand:projectTree.addRootCategory",
    "onCommand:projectTree.renameCategory",
    "onCommand:projectTree.removeCategory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectTree",
          "title": "%viewsContainers.projectTree.title%",
          "icon": "resources/project-tree-icon.svg"
        }
      ]
    },
    "views": {
      "projectTree": [
        {
          "id": "projectTreeView",
          "name": "%views.projectTree.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "projectTree.openConfig",
        "title": "%commands.editConfig.title%",
        "icon": "$(pencil)"
      },
      {
        "command": "projectTree.refresh",
        "title": "%commands.refresh.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "projectTree.openProjectHere",
        "title": "%commands.openHere.title%",
        "icon": "$(file-code)"
      },
      {
        "command": "projectTree.openProject",
        "title": "%commands.openNew.title%",
        "icon": "$(window)"
      },
      {
        "command": "projectTree.addProject",
        "title": "%commands.addProject.title%",
        "icon": "$(new-file)"
      },
      {
        "command": "projectTree.addRootCategory",
        "title": "%commands.addRootCategory.title%",
        "icon": "$(new-folder)"
      },
      {
        "command": "projectTree.editProject",
        "title": "%commands.editProject.title%",
        "icon": "$(edit)"
      },
      {
        "command": "projectTree.removeProject",
        "title": "%commands.removeProject.title%",
        "icon": "$(trash)"
      },
      {
        "command": "projectTree.addCategory",
        "title": "%commands.addCategory.title%",
        "icon": "$(new-folder)"
      },
      {
        "command": "projectTree.renameCategory",
        "title": "%commands.renameCategory.title%",
        "icon": "$(edit)"
      },
      {
        "command": "projectTree.removeCategory",
        "title": "%commands.removeCategory.title%",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "projectTree.openProjectHere",
          "when": "view == projectTreeView && viewItem == projectTree.project",
          "group": "inline@1"
        },
        {
          "command": "projectTree.openProject",
          "when": "view == projectTreeView && viewItem == projectTree.project",
          "group": "inline@2"
        },
        {
          "command": "projectTree.editProject",
          "when": "view == projectTreeView && viewItem == projectTree.project",
          "group": "inline@3"
        },
        {
          "command": "projectTree.removeProject",
          "when": "view == projectTreeView && viewItem == projectTree.project",
          "group": "inline@4"
        },
        {
          "command": "projectTree.addProject",
          "when": "view == projectTreeView && viewItem == projectTree.category",
          "group": "inline@1"
        },
        {
          "command": "projectTree.addCategory",
          "when": "view == projectTreeView && viewItem == projectTree.category",
          "group": "inline@2"
        },
        {
          "command": "projectTree.renameCategory",
          "when": "view == projectTreeView && viewItem == projectTree.category",
          "group": "inline@3"
        },
        {
          "command": "projectTree.removeCategory",
          "when": "view == projectTreeView && viewItem == projectTree.category",
          "group": "inline@4"
        }
      ],
      "view/title": [
        {
          "command": "projectTree.addProject",
          "when": "view == projectTreeView",
          "group": "navigation"
        },
        {
          "command": "projectTree.addRootCategory",
          "when": "view == projectTreeView",
          "group": "navigation"
        },
        {
          "command": "projectTree.refresh",
          "when": "view == projectTreeView",
          "group": "navigation"
        },
        {
          "command": "projectTree.openConfig",
          "when": "view == projectTreeView",
          "group": "navigation"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": [
          "**/nzhuravlev.vcode-project-tree/projects.json"
        ],
        "url": "./schemas/projects.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
